@model IEnumerable<FileInfo>
@{
    ViewBag.Title = "Upload product photo";
}

@using (Html.BeginForm("UploadImage", "Products", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <div class="container">
        <h1 class="text-center">
            Upload Product Photos
        </h1>
        <div id="BrowseFile">
            <div class="row">
                <div class="col-sm-4">
                    <input type="file" id="Files" />
                </div>
                <div class="col-sm-2">
                    <input type="button" id="Upload" class="btn btn-default" value="Upload" />
                </div>

                <div class="col-sm-2">
                    <input type="button" id="GetFolderInFiles" class="btn btn-default" value="Show Files" />
                </div>
            </div>
        </div>

        <br />
        <div class="row">
            <div class="col-sm-6">
                 Images product list

                <table class="table" id="ListAllFiles" border="1">

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.Name
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>

        <div class="row">
            <div class="col-md-offset-2 col-md-10 text-success">
                @ViewBag.FileStatus
            </div>
        </div>
        <br />
        <br />
        <br />
        <br />
    </div>
}
@section scripts{
        <script src="~/Scripts/jquery-3.4.1.js"></script>
        <script src="https://code.jquery.com/ui/1.10.4/jquery-ui.js"></script>
        <script type="text/javascript" src="~/Scripts/Uploads/UploadImage.js"></script>
}