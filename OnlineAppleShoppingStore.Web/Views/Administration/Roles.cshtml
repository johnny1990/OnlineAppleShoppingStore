@model IEnumerable<OnlineAppleShoppingStoreAuth.Entities.AspNetRole>
@{
    ViewBag.Title = "Roles";
}

<h2>Roles</h2>

<p>
    @Html.ActionLink("Add New Role", "NewRole")
</p>
<table class="table" border="1">
    <tr class="alert-info">
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditRole", new { id = item.Id }) |
                @Html.ActionLink("Delete", "DeleteRole", new { id = item.Id })
            </td>
        </tr>
    }

</table>

<div>
    @Html.ActionLink("Back to Dashboard", "Dashboard")
</div>

