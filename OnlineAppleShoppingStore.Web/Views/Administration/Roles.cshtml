@model IEnumerable<OnlineAppleShoppingStoreAuth.Entities.AspNetRole>
@{
    ViewBag.Title = "Roles";
}

<h2>Roles</h2>

<p>
    @Html.ActionLink("Add New Role", "NewRole")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditRole", new { id = item.Id }) |
                @*@Html.ActionLink("Details", "Details", new { id = item.Id }) |*@
                @Html.ActionLink("Delete", "DeleteRole", new { id = item.Id })
            </td>
        </tr>
    }

</table>

<iframe src="/ProductsController/Index?WebForm1.aspx" width="1000" height="400">
</iframe>


