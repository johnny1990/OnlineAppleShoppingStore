@model OnlineAppleShoppingStore.Entities.Models.Product

@{
    ViewBag.Title = "Product - " + Model.Name;
}

<h2>@Model.Name</h2>


<p>
    <img alt="@Model.Name" src="@Model.LastUpdated" />
</p>

<div id="item-details" class="table-bordered">
    <p>
        <em>Category:</em>
        @Model.Category.Name
    </p>
    <p>
        <em>Price:</em>
        @String.Format("{0:F}", Model.Price)
    </p>
    <p>
        <em>Description:</em>
        @Model.Description
    </p>
    <p>
        <em>Last Updated:</em>
        @Model.LastUpdated
    </p>
    <p class="button">
        @Html.ActionLink("Add to cart", "AddToCart",
        "Cart", new { id = Model.Id }, "")
    </p>
    <p class="button">
        @Html.ActionLink("Back", "Browse",
        "Dashboard", new { category = Model.Category.Name },  "")
    </p>
</div>



