@model IEnumerable<OnlineAppleShoppingStore.Entities.Models.ProductsOrdered>

@{
    ViewBag.Title = "ProductsOrderedReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">ProductsOrdered Report</h2>

<table class="table" border="1">
    <tr class="alert-info">
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Order.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.Name)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Order.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product.Name)
        </td>
 
    </tr>
}

</table>
